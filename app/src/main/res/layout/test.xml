<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <VideoView
        android:layout_width="match_parent"
        android:id="@+id/videoView"
        android:layout_gravity="center"
        android:layout_height="match_parent">
    </VideoView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <EditText
                android:id="@+id/txt_search_city"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Search City"
                android:padding="10dp"
                android:weightSum="1" />

            <Button
                android:id="@+id/btn_search"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Search"
                android:weightSum="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/txt_city"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_black"
                android:gravity="center"
                android:text="THANH PHO TEN"
                android:textColor="#F3F0F0"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_country"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_black"
                android:gravity="center"
                android:text="COUNTRY"
                android:textColor="#F3F0F0"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/nows"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_black"
                android:gravity="center"
                android:text="ngày tháng năm"
                android:textColor="#F3F0F0"
                android:textSize="15dp" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/txt_temp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/nunito_black"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="20"
                android:textColor="#F3F0F0"
                android:textSize="35dp"
                android:weightSum="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txt_desprication"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.6"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txt_desprication"
                android:layout_width="190dp"
                android:layout_height="49dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/nunito_black"
                android:gravity="center"
                android:text="Miêu tả"
                android:textColor="#F3F0F0"
                android:textSize="17dp"
                android:weightSum="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.529"
                tools:ignore="MissingConstraints"></TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/img_clouds"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/rain"></ImageView>

            <TextView
                android:id="@+id/mintemp"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_black"
                android:textColor="#F3F0F0"
                android:textSize="20dp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/testimage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/rain" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/wind1" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/doam" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/txt_rain"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_black"
                android:gravity="center"
                android:text="Mưa"
                android:textColor="#F3F0F0"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txt_wind"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_black"
                android:gravity="center"
                android:text="Tốc độ Gio"
                android:textColor="#F3F0F0"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txt_am"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_black"
                android:gravity="center"
                android:text="Ẩm"
                android:textColor="#F3F0F0"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/nextDay"

                android:layout_width="270dp"
                android:layout_height="60dp"

                android:background="@drawable/button"
                android:shadowColor="#000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="4"
                android:text="7 ngay"
                android:textColor="#FFFCFE"
                android:textSize="30sp"></Button>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>